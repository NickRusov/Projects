
@using FLS.LocalWiki.Models.Entities
@using FLS.LocalWiki.WebApplication.Models
@model Article
@{
    Layout = null;
}

<html @*xmlns="http://www.w3.org/1999/xhtml"*@ >
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reading Articles</title>

</head>

<body>
        <p>@Model.Title</p>
        <p>@Model.Author.FirstName @Model.Author.LastName</p>
        <p>@Model.Text</p>
        <p>Average rating: @Model.AverageRating</p>
        <table> @foreach (var comment in Model.Comments)
                {
                    <tr>
                        <td>
                            <p>@comment</p>
                        </td>
                    </tr>
                }
        </table>
        <table> @foreach (var rating in Model.Ratings)
                {
                    <tr>
                        <td>
                            <p>@rating</p>
                        </td>
                    </tr>
                }
        </table>

        <p></p>
</body>
</html>
